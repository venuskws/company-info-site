<div class="row">
<div class="col-md-12">
<h2>Employees
    <a href="/employees/add" class="btn btn-success pull-right">Add New Employee</a>
</h2>
<div class="table-responsive">
<table class="table">
    <tr>
        <td>Employee&nbsp;Num</td>
        <td>Full&nbsp;Name</td>
        <td>Email</td>
        <td>Address</td>
        <td>Manager&nbsp;ID</td>
        <td>Status</td>
        <td>Department</td>
        <td>Hired&nbsp;On</td>
        <td></td>
    </tr>
{{#each employees}}
    <tr>
        <td>{{employeeNum}}</td>
        <td><a href="/employee/{{employeeNum}}">{{firstName}} {{lastName}}</a></td>
        <td><a href="mailto:{{email}}">{{email}}</a></td>
        <td>{{addressStreet}} {{addressCity}} {{addressState}} {{addressPostal}}</td>
        <td><a href="/employees?manager={{employeeManagerNum}}">{{employeeManagerNum}}</a></td>
        <td><a href="/employees?status={{status}}">{{status}}</a></td>
        <td><a href="/employees?department={{department}}">{{department}}</a></td>
        <td>{{hireDate}}</td>
        <td><a href="employees/delete/{{employeeNum}}"><button class="btn btn-danger">Remove</button></a></td>
    </tr>
{{/each}}

</table>
</div>
</div>
{{#unless employees}}
    <div class="col-md-12 text-center">
    <strong>{{message}}</strong>
    </div>
{{/unless}}
</div>